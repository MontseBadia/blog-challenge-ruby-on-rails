<h1><%= t('.title') %></h1>

<% if @users.size != 0 %>
  <% @users.each do |user| %>
    <ul>
      <li>
        <%= link_to "#{user.name.capitalize}", user_path(user.id) %>
        <p><%= user.email %></p>
        <% if user != current_user %>
          <div id="btn-following-<%= user.id %>">
            <%= render partial: 'users/follow_unfollow.html.erb', locals: { user: user } %>
          </div>
        <% end %>
        <p id="followers-<%= user.id %>">
          <%= pluralize(user.followers.size, t('.follower')) %>:
          <%= user.name_followers %>
        </p>
        <hr>
      </li>
    </ul>
  <% end %>
<% end %>